<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>Login_Servlet</servlet-name>
        <servlet-class>cn.edu.hcnu.Servlet.Login_Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmpServlet</servlet-name>
        <servlet-class>cn.edu.hcnu.Servlet.EmpServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login_Servlet</servlet-name>
        <url-pattern>/loginServlet</url-pattern>
        <url-pattern>/exit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmpServlet</servlet-name>
        <url-pattern>/theemp</url-pattern>
        <url-pattern>/selectEmp</url-pattern>
        <url-pattern>/delectEmp</url-pattern>
        <url-pattern>/addEmp</url-pattern>
        <url-pattern>/choseEmp</url-pattern>
        <url-pattern>/changeEmp</url-pattern>
    </servlet-mapping>
</web-app>